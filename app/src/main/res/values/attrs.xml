<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="HorizontalProgressChartView">
        <attr name="horizontalBarColor" format="color|string" />
        <attr name="horizontalBarBackgroundColor" format="color|string" />
        <attr name="horizontalProgressPercentage" format="integer" />
        <attr name="horizontalStrokeWidth" format="dimension" />
        <attr name="horizontalStrokeRoundedCap" format="boolean" />
    </declare-styleable>

    <declare-styleable name="RingProgressChartView">
        <attr name="ringBarColor" format="color|string" />
        <attr name="ringBackgroundColor" format="color|string" />
        <attr name="ringProgressPercentage" format="integer" />
        <attr name="ringStrokeWidth" format="dimension" />
        <attr name="ringStrokeRoundedCap" format="boolean" />
        <attr name="ringText" format="string" />
        <attr name="ringTextSize" format="dimension" />
        <attr name="ringTextColor" format="color|string" />
    </declare-styleable>

    <declare-styleable name="StackedBarChartView">
        <attr name="stackedBarChartDescription" format="reference" />
        <attr name="stackedBarMainColor" format="color|string" />
        <attr name="stackedBarLeftAxisTextSize" format="float" />
        <attr name="stackedBarXAxisTextSize" format="float" />
        <attr name="stackedBarLegendsTextSize" format="float" />
        <attr name="stackedBarLegendFormSize" format="float" />
    </declare-styleable>

    <declare-styleable name="PieChartView">
        <attr name="pieTextColor" format="color|string" />
        <attr name="pieChartTitle" format="reference" />
        <attr name="pieLegendsNumColumns" format="integer" />
    </declare-styleable>

    <declare-styleable name="BarChartView">
        <attr name="barChartTitle" format="reference" />
        <attr name="barChartDescription" format="reference" />
        <attr name="barMainColor" format="color|string" />
        <attr name="barLeftAxisTextSize" format="float" />
        <attr name="barXAxisTextSize" format="float" />
        <attr name="barLegendsTextSize" format="float" />
        <attr name="barLegendFormSize" format="float" />
        <attr name="barLeftAmountDescription" format="reference" />
        <attr name="barRightAmountDescription" format="reference" />
    </declare-styleable>
</resources>